atom_style	hybrid granular dipole
boundary	f f f
newton		off
atom_modify	sort 10000 0

communicate	single vel yes
units		si
processors	1 1 1


soft_particles yes

# variable reg_dim equal 10 #meters

region		reg block -0.063 0.063 -0.009 0.009 -0.177 0 units box
create_box	1 reg
neighbor	2 bin
neigh_modify	delay 0 every 1

fix 		m1 all property/global youngsModulus peratomtype 70
fix 		m2 all property/global poissonsRatio peratomtype 0.24
fix 		m3 all property/global coefficientRestitution peratomtypepair 2 0.97 0.82
fix 		m4 all property/global coefficientFriction peratomtypepair 2 0.16 0.45
fix 		m6 all property/global cohesionEnergyDensity peratomtypepair 1 0.01

# fix m7 all property/global magneticSusceptibility peratomtype 0.96


pair_style gran model hertz tangential history cohesion sjkr
pair_coeff	* *

timestep	10e-6 # seconds

#radius of atoms
variable atom_rad equal 0.001 #meters
#diameter of atoms
variable atom_dia equal 2*${atom_rad}

fix zwalls all wall/gran model hertz tangential history primitive type 1 zplane 0.15


fix     int all nve/sphere
fix     grav all gravity 9.81 vector 0.0 0.0 -1.0



dump    dmp all custom 1000 post/dump*.liggghts id type fx fy fz x y z radius mass
#dump_modify dmp format "%d %d %1.23f %1.23f %1.23f %1.23f %1.23f %1.23f %1.23f %1.23f %1.23f %1.23f"

#fix	1 nve_group nve/sphere

